<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_journey_time_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/activity_journey_time_selection_relative_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.id11303765.commute.view.journey.JourneyTimeSelectionActivity"
    tools:showIn="@layout/activity_journey_time_selection">

    <LinearLayout
        android:id="@+id/activity_journey_time_selection_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TimePicker
            android:id="@+id/activity_journey_time_selection_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="-80dp"
            android:paddingStart="14dp"
            android:paddingEnd="16dp"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:id="@+id/activity_journey_time_selection_reset_time"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@xml/swap_button_ripple"
                android:contentDescription="@string/reset_time_button"
                android:src="@drawable/ic_update_black_24dp"
                android:tint="@color/primary" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/activity_journey_time_selection_time_ll">

        <Button
            android:id="@+id/activity_journey_time_selection_date_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/primary"
            android:text="@string/today"/>

    </LinearLayout>



</RelativeLayout>

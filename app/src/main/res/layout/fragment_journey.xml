<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_journey_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/fragment_journey_search_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/fragment_journey_constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/fragment_journey_constraintLayout"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/fragment_journey_from_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_search_linearLayout"
            app:layout_constraintRight_toRightOf="@+id/fragment_journey_search_linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/fragment_journey_search_linearLayout"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <TextView
                android:id="@+id/fragment_journey_from_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/from"
                app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_from_ll"
                app:layout_constraintTop_toTopOf="@+id/fragment_journey_from_ll"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/fragment_journey_departure_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@xml/journey_button_shape"
                android:hint="@string/choose_starting_point"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAlignment="textStart"
                app:layout_constraintLeft_toRightOf="@+id/fragment_journey_from_tv"
                tools:layout_constraintRight_creator="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_journey_swap_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_search_linearLayout"
            app:layout_constraintRight_toRightOf="@+id/fragment_journey_search_linearLayout">

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_swap_vert_black_24dp"
                android:tint="@color/icons"
                app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_swap_ll"
                app:layout_constraintTop_toTopOf="@+id/fragment_journey_swap_ll" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_journey_to_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_search_linearLayout"
            app:layout_constraintRight_toRightOf="@+id/fragment_journey_search_linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/fragment_journey_swap_ll">

            <TextView
                android:id="@+id/fragment_journey_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingStart="16dp"
                android:text="@string/to"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="15dp" />

            <Button
                android:id="@+id/fragment_journey_destination_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@xml/journey_button_shape"
                android:hint="@string/choose_destination"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAlignment="textStart"
                app:layout_constraintLeft_toRightOf="@+id/fragment_journey_to_tv" />
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_timetables_search_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:src="@drawable/ic_search_black_24dp"
        android:tint="@color/icons"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_journey_search_linearLayout"
        app:layout_constraintRight_toRightOf="@+id/fragment_journey_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/fragment_journey_search_linearLayout"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="0"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/fragment_journey_time_option_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@xml/journey_options_button_shape"
        android:drawableLeft="@drawable/ic_schedule_black_24dp"
        android:drawablePadding="20dp"
        android:drawableTint="@color/primary"
        android:text="@string/leave_now"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/secondary_text"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/fragment_journey_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/fragment_journey_search_linearLayout" />

    <LinearLayout
        android:id="@+id/fragment_journey_more_options_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@xml/journey_options_button_shape"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_journey_constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/fragment_journey_constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/fragment_journey_time_option_button"
        android:elevation="2dp">


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/ic_directions_run_black_24dp"
            android:drawableTint="@color/primary"
            android:text="Speed"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/ic_credit_card_black_24dp"
            android:drawableTint="@color/primary"
            android:text="Opal Card"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:drawableTop="@drawable/ic_layers_black_24dp"
            android:drawableTint="@color/primary"
            android:text="Quick Search"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/ic_directions_railway_black_24dp"
            android:drawableTint="@color/primary"
            android:text="Transport"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="@+id/fragment_journey_more_options_ll"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>